*
  margin 0
  padding 0
*, *:before, *:after
  -webkit-box-sizing border-box
  box-sizing border-box

body
  position fixed
  width 100%
  height 100%
  font-family 'Roboto', sans-serif
  font-size 1em
  overflow-x hidden
  color #262626
  background #cdcdcd

input
  border none
  margin none
  outline none
  color #fff

.trans
  -webkit-transition all 0.4s ease
  -moz-transition all 0.4s ease
  -o-transition all 0.4s ease
  transition all 0.4s ease

.content
  text-align center
  margin 10%

.clear-box
  @extend .trans
  background rgba(250, 250, 250, .3)
  box-shadow 0 0 1px #666
  
.search
  @extend .clear-box
  width 50%
  height 40px
  margin-left 25%


.cards
  li
    @extend .clear-box
    position relative
    padding 1.5% 10px 1.5% 10px
    min-width 100px
    width 15%
    font-size 1.3vw
    height auto
    list-style none
    display inline-block
    margin 1%
    color #fff
    &:hover
      background rgba(250, 250, 250, .5)
    .title
      overflow hidden
    img
      position absolute
      top 30%
      left 10%
      width 15%

@media all and (max-width: 850px)
  .cards
    li
      

@media all and (max-width: 500px)
  .cards
    li
      font-size .9em
      img
        left 5%
